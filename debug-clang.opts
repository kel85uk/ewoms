CXX_WARNING_OPTS=" \
    -Wall \
    -Wunused \
    -Wmissing-include-dirs \
    -Wcast-align"

CXX_OPTS=" \
    -fstrict-overflow \
    -g \
    -DDEBUG=1"

# cmake flags
CMAKE_FLAGS=" \
  -DBUILD_TESTING=OFF \
  -DCMAKE_C_COMPILER=\"clang\" \
  -DCMAKE_CXX_COMPILER=\"clang++\" \
  -DCMAKE_C_FLAGS=\"$CXX_WARNING_OPTS $CXX_OPTS\" \
  -DCMAKE_CXX_FLAGS=\"$CXX_WARNING_OPTS $CXX_OPTS\" \
  "
